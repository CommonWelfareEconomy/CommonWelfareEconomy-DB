<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Assets/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/js/bootstrap.js")" type="text/javascript"></script>
    
    <script language="javascript" type="text/javascript">
        $(function() {
            $("#btnUnterstuetzerWerden").popover('btnUnterstuetzerWerden');
        });

    </script>
</head>
    <body>

        <div class="container">
            
            <div class="">
                
            </div>

            <div class="row well">
                <div class="span10">
                    <h1 >Gemeinwohlökonomie Unterstützer</h1>        
                </div>
                <div class="pull-right" >
                    @Html.Partial("_LogOnPartial")
                </div>

            </div>
        
            <div class="row">
                
                <div class="span3">
                    <div class="row">
                        <div class="well" style="padding: 22px 0;">
                            <ul class="nav nav-list">
                                <li class="active"><a href="#"><i class="icon-heart icon-white"></i> Unternehmen (1740)</a></li>
                                <li><a href="#"><i class="icon-heart"></i> Organisationen/Vereine (20)</a></li>
                                <li><a href="#"><i class="icon-user"></i> Privatpersonen (400)</a></li>
                                <li><a href="#"><i class="icon-user"></i> Politikerinnen (80)</a></li>
                                <li><a href="#"><i class="icon-user"></i> BotaschfterInnen (150)</a></li>
                            </ul>
                        </div>
                        
                        <div class="well">
                              <div class="btn-group">
                              <a class="btn btn-large btn-success dropdown-toggle" data-toggle="dropdown" href="#" id="btnUnterstuetzerWerden"> &nbsp;   Unterstützer werden! &nbsp; &nbsp; &nbsp; <span class="caret"></span></a>
                              <ul class="dropdown-menu">
                                <li><a href="#">Als Unternehmen</a></li>
                                <li><a href="#">Als Privatperson</a></li>
                                <li><a href="#">Als Politiker</a></li>
                                <li><a href="#">Als Botschafter</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                              </ul>
                            </div>
                        </div>
                            
                        
                        <div class="well">
                            @RenderBody()    
                        </div>

                    </div>
                </div>
               
                <div class="span8">
                    <div class="row" style="padding: 0 6px;">
                        <div class="form-search well span5">
                            <input type="text" class="input-xlarge" id="input01">
                            <button type="submit" class="btn btn-primary">Suche</button>
                        </div>                    
                        
                    </div>
                </div>

                <div class="span3">
                    
                    
                    
                            
                </div>            
            </div>


        </div>
    </body>
</html>
