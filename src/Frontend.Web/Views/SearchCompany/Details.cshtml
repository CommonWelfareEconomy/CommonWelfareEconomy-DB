@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using GwoDb
@model CompanyDetailsModel

<style type="text/css">
    
.form-horizontal .control-group {
    margin-bottom: 10px;
}    
</style>


<div class="span8" >
    
   
    @using (Html.BeginForm()) {
    
        <div class="form-horizontal">

            <legend>"@Model.CompanyName" bearbeiten</legend>
            
            @Html.Message(Model.Message)
            
            <div class="control-group">
                @Html.LabelFor(m => m.CompanyName)
                <div class="controls">
                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "span4"})
                </div>
            </div>
                
            <div class="control-group">
                @Html.LabelFor(m => m.Industry)
                <div class="controls">
                    @Html.TextBoxFor(m => m.Industry, new { @class = "span3" })
                </div>
            </div>
        
            <div class="control-group">
                @Html.LabelFor(m => m.Size)
                <div class="controls">
                    @Html.TextBoxFor(m => m.Size, new { @class = "span2"})
                </div>
            </div>
        
            <div class="control-group">
                <label>Land</label>
                <div class="controls">
                    <select>
                        <option>Österreich</option>
                        <option>Deutschland</option>
                        <option>Spain</option>
                    </select>
                </div>
            </div>
            
            <div class="control-group">
                @Html.LabelFor(m => m.Location)
                
                <div class="controls">
                    @Html.TextBoxFor(m => m.Location, new { @class = "span2"})
                    <span class="help-inline">Plz:</span>
                    @Html.TextBoxFor(m => m.ZipCode, new { @class = "span1" })
                </div>
            </div>
            
            <div class="control-group">
                @Html.LabelFor(m => m.Email)
                
                <div class="controls">
                    @Html.TextBoxFor(m => m.Email, new { @class = "span4"})
                    <p class="help-block">Wir gehen vertrauensvoll mit Ihren Daten um. Die E-Mail wird nirgendwo öffentlich angezeigt.</p>
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(m => m.Url)
                <div class="controls">
                    <div class="input-prepend">
                        <span class="add-on">http://</span>
                        @Html.TextBoxFor(m => m.Url, new { @style = "width:245px;"})
                    </div>
                </div>
            </div>
            
            <div class="control-group">
                @Html.LabelFor(m => m.WelfareBalanceFor2012)
                
                <div class="controls">
                    @Html.CheckBoxFor( m => m.WelfareBalanceFor2012)
                    <p class="help-block">Für das Unternehmen soll eine Bilanz für das Jahr 2012 erstellt werden.</p>
                </div>
            </div>
      
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Speichern</button>
            </div>
        </div>
    }

</div>
